name:               ShortCut
version:            0.7.0.0
synopsis:           A scripting language that makes short work of phylogenomic cuts
author:             Jeffrey David Johnson
maintainer:         jefdaj@berkeley.edu
build-type:         Simple
cabal-version:      >=1.10
extra-source-files: README.md
data-files:         examples/PSII.cut,
                    examples/PSII.ast,
                    scripts/extract-seq-ids.py,
                    scripts/extract-seqs-by-id.py,
                    scripts/filter_genes.R,
                    scripts/filter_genomes.R,
                    scripts/worst_best_evalue.R

executable shortcut
  main-is:          ShortCut.hs
  default-language: Haskell2010
  hs-source-dirs:   .
  other-modules:    Paths_ShortCut,
                    ShortCut.Core,
                    ShortCut.Core.Compile,
                    ShortCut.Core.Interpret,
                    ShortCut.Core.Interpret.Tests,
                    ShortCut.Core.Parse,
                    ShortCut.Core.Parse.Tests,
                    ShortCut.Core.Repl,
                    ShortCut.Core.Repl.Tests,
                    ShortCut.Core.Tests,
                    ShortCut.Core.Types,
                    ShortCut.Core.Util,
                    ShortCut.Tests
  build-depends:    base,
                    Command,
                    MissingH,
                    QuickCheck,
                    bytestring,
                    configurator,
                    containers,
                    cryptohash,
                    directory,
                    docopt,
                    enclosed-exceptions,
                    filepath,
                    haskeline,
                    hspec,
                    mtl,
                    parsec,
                    pretty,
                    scientific,
                    shake,
                    text,
                    transformers
